<Window x:Class="Appli_SmallWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Loaded="Window_Loaded" WindowState="Normal">

    <Window.Resources>
        <Style TargetType="Ellipse" x:Key="uniteStd" >
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Fill" Value="Black"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="Panel.ZIndex" Value="333"/>
            <!-- pour avoir un affichage au premier plan -->
            <Setter Property="Visibility" Value= "Collapsed"/>
            <!-- visibilité par défaut = cachée -->
        </Style>
    </Window.Resources>
    
    <DockPanel Name="dockMainWindow">
        <StackPanel Name="scores" DockPanel.Dock="Left">
            <Label Name="labelJ1"/>
            <Label Name="scoreJ1"/>
            <Label Name="labelJ2"/>
            <Label Name="scoreJ2"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Name="plateauGrid">
                <!--<Ellipse Fill="White" Width="10" Height="10" Name="unitEllipse" Panel.ZIndex="444" IsHitTestVisible="False" />-->
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>